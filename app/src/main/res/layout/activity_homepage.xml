<?xml version="1.0" encoding="utf-8"?>
<!--
    The root layout is a ConstraintLayout, which is a powerful and flexible layout that allows you
    to create complex UIs with a flat view hierarchy. It positions and sizes child views relative
    to each other and to the parent layout.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Homepage">

    <!--
        The Toolbar acts as the app bar at the top of the screen.
        It's constrained to the top, left, and right edges of the parent layout.
    -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#484848"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/app_name"
        app:titleTextColor="@color/white" />

    <!--
        A ScrollView is used to make the content area scrollable. This is crucial for ensuring
        that all content is accessible on smaller screens or when the task list is long.
        - 'fillViewport="true"' allows the child layout to fill the ScrollView's height if the content is short.
        - It's constrained between the bottom of the toolbar and the top of the "Add New Task" button.
    -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/addNewTaskButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--
            A nested ConstraintLayout holds the content inside the ScrollView. This allows us to
            continue using constraints for positioning the header, search bar, and RecyclerView.
        -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--
                The main header text for the homepage.
                - 'fontFamily' applies a custom font for styling.
                - It's constrained to the top of its parent (the nested ConstraintLayout).
            -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/zalando_sans_semi_expanded_black"
                android:text="@string/homepage"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--
                The search bar, implemented as an EditText.
                - 'background' points to a custom drawable for the rounded rectangle shape.
                - 'hint' provides placeholder text.
                - 'paddingStart' gives space between the text and the left edge.
                - It's constrained below the header text.
            -->
            <EditText
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/search_bar_background"
                android:hint="Search tasks..."
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <!--
                The RecyclerView is the core component for displaying the list of tasks efficiently.
                - It's constrained below the search view and to the bottom of its parent layout,
                  allowing it to fill the remaining vertical space.
            -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tasksRecyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/searchView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!--
        The "Add New Task" button, anchored to the bottom of the main screen.
        - 'layout_width="0dp"' with start/end constraints makes it stretch horizontally.
        - 'backgroundTint' sets the button's color.
        - 'paddingVertical' increases the button's height and touch area.
        - It is outside the ScrollView so it always stays visible at the bottom.
    -->
    <Button
        android:id="@+id/addNewTaskButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="@color/fab"
        android:paddingVertical="16dp"
        android:text="Add New Task"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
